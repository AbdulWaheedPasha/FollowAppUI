<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zinnox.projects.followappui.CallHandler"
        android:id="@+id/call_handler"
        android:orientation="vertical"
        android:background="@color/white">

            <RelativeLayout
                android:id="@+id/call_handler_header"
                android:background="@drawable/offline_met_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="70dp">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/caller_header"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo_dnd"
                        android:layout_alignParentRight="true"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp">
                        <rm.com.audiowave.AudioWaveView
                            android:id="@+id/wave"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_margin="16dp"
                            app:animateExpansion="false"
                            app:chunkWidth="3dp"
                            app:chunkHeight="24dp"
                            app:minChunkHeight="2dp"
                            app:chunkSpacing="1dp"
                            app:chunkRadius="1dp"
                            app:waveColor="@android:color/white"
                            />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentTop="true"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile"
                        />
                </RelativeLayout>



                <TextView
                    android:id="@+id/caller_name"
                    android:layout_below="@+id/caller_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abdul Waheed"
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <TextView
                    android:layout_below="@+id/caller_name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 9663413886"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="21sp"/>
            </RelativeLayout>


        <LinearLayout
            android:id="@+id/keynote_circle"
            android:onClick="popupKeyNote"
            android:layout_marginTop="-70dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/keynote"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_key_note"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_alignBottom="@+id/keynote"
                android:layout_marginTop="-18dp"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="1:38"/>

         </LinearLayout>
    <android.support.v7.widget.CardView
        android:visibility="invisible"
        android:layout_marginTop="-140dp"
        android:id="@+id/keynote_square"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo_key_note"/>
                <TextView
                    android:layout_alignBottom="@+id/keynote"
                    android:layout_marginTop="-18dp"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="1:38"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/lightgrey"
                    android:textAlignment="center"
                    android:text="@string/keynoteplaceholder"
                    android:inputType="textMultiLine"/>
                <LinearLayout
                    android:onClick="Add_key_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bordercolor"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/logo_call"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <RelativeLayout
            android:layout_marginBottom="40dp"
            android:id="@+id/speaker_on_off"
            android:layout_above="@+id/Call_end"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:weightSum="3"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/circle">
            <ImageView
                android:id="@+id/SpeakerOnOffOperation"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_speaker"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Call_end"
            android:layout_alignParentBottom="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:weightSum="3"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/Disconnect_call"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_call_disconnect"
                />
        </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>


