<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bordercolor"
              android:orientation="vertical"
    >

        <RelativeLayout
            android:id="@+id/CardViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="1dp">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/profile"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/contact_image"
                android:text="Zakir Hussain"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_name"
                android:layout_toRightOf="@+id/contact_image"
                android:text="9663413886"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/contact_group_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/contact_call"
                android:layout_marginRight="10dp"
                android:src="@drawable/group_btn_add"
                />

            <ImageView
                android:id="@+id/contact_call"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/contact_call_btn"
                />
        </RelativeLayout>


</LinearLayout>

